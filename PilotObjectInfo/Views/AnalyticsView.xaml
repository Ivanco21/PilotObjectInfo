<UserControl x:Class="PilotObjectInfo.Views.AnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PilotObjectInfo.Views" 
             xmlns:viewmodels="clr-namespace:PilotObjectInfo.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:AnalyticsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="30*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Content="Найти все клиентские плагины" 
                        Command="{Binding SearchAssemblyCommand}">
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>

            </Grid>
            <Grid Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Плагины"  HorizontalAlignment="Center">
                            
                        </TextBlock>
                        <DataGrid Grid.Row="1"
                                    ItemsSource="{Binding AssemblyDescriptions}"
                                    AutoGenerateColumns="False"
                                    IsReadOnly="True"
                                    SelectedItem="{Binding Path=SelectedAssembly}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="InternalName" Binding="{Binding InternalName, Mode=OneWay}"/>
                                <DataGridTextColumn Header="Version" Binding="{Binding Version, Mode=OneWay}"/>
                                <DataGridTextColumn Header="ExtensionType" Binding="{Binding ExtensionType, Mode=OneWay}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Center"/>

                    <Grid Grid.Column="2" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Типы"  HorizontalAlignment="Center">

                        </TextBlock>
                        <DataGrid Grid.Row="1"
                                    ItemsSource="{Binding TypeDescriptions}"
                                    AutoGenerateColumns="False"
                                    IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=OneWay}"/>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title, Mode=OneWay}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    
                    <GridSplitter Grid.Column="3" Width="2" HorizontalAlignment="Center"/>

                    <Grid Grid.Column="4" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Атрибуты" HorizontalAlignment="Center">

                        </TextBlock>
                        <DataGrid Grid.Row="1"
                                   ItemsSource="{Binding AttributeDescriptions}"
                                   AutoGenerateColumns="False"
                                   IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=OneWay}"/>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title, Mode=OneWay}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>    
    </Grid>
</UserControl>
