<UserControl x:Class="PilotObjectInfo.Views.CodeStatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:PilotObjectInfo.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:CodeSearchViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="30*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                            Text="Search:"
                            Foreground="Black"
                            VerticalAlignment="Center">
                </TextBlock>
                <TextBox Grid.Column="1" x:Name="SearchTextBox"
                         Margin="2"
                         Height="25" 
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         BorderBrush="Black"
                         BorderThickness="0.5"
                         Background="White"
                         Foreground="Black"
                         IsReadOnly="False"
                         VerticalContentAlignment="Center">
                </TextBox>
                <Button Grid.Column="3" 
                    Content="Search on extensions" 
                    Margin="2"
                    Command="{Binding CodeSearchCommand}">
                </Button>
            </Grid>
            <Grid Grid.Row="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="NotificationsList" Margin="10" ItemsSource="{Binding CodeStates}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border>
                                    <StackPanel>
                                        <TextBlock
                                                    FontSize="14"
                                                    Text="{Binding Path=InternalName, StringFormat=Плагин: {0}}">
                                        </TextBlock>
                                        <TextBlock
                                                    FontSize="14"
                                                    Text="{Binding Path=Version, StringFormat= v{0}}">
                                        </TextBlock>
                                        <TextBlock Text="{Binding Product}" FontSize="14"/>

                                        <ItemsControl ItemsSource="{Binding CodeParts}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
                                                        <TextBlock Text="{Binding}"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
