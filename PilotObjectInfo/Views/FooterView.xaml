<UserControl x:Class="PilotObjectInfo.Views.FooterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PilotObjectInfo.Views" 
             xmlns:base="clr-namespace:PilotObjectInfo.ViewModels"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <TextBlock d:DataContext="{d:DesignInstance Type=base:FooterViewModel}" Grid.Column="1" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Text="{Binding Path=StatusMessage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            </TextBlock>
        </Grid>
</UserControl>
