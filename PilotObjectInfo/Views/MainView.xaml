<Window x:Class="PilotObjectInfo.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PilotObjectInfo.Views"
    mc:Ignorable="d"
    Title="Pilot object Info"
    d:DesignHeight="300" d:DesignWidth="300">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>
    <Grid Margin="5">
        <TabControl>
            <TabItem Header="Element Mode">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition Height="20*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="29*" />
                            <ColumnDefinition Width="19*"/>
                            <ColumnDefinition Width="161*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Id"/>
                         <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
                            <Hyperlink Command="{Binding GoToDataObjectCommand}"
                                CommandParameter="{Binding Id}">
                                <Run Text="{Binding Id, Mode=OneWay}" />
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Display name"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding DisplayName, Mode=OneWay}" Grid.ColumnSpan="3" />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Created"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding Created, Mode=OneWay}" Grid.ColumnSpan="3"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="IsSecret" />
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="{Binding IsSecret, Mode=OneWay}" Grid.ColumnSpan="3"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="ParentId"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3">
                            <Hyperlink Command="{Binding GoToDataObjectCommand}"
                                CommandParameter="{Binding ParentId}">
                                <Run Text="{Binding ParentId, Mode=OneWay}" />
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="CurrentUserId" />
                        <TextBox Grid.Row="5" Grid.Column="1"
                                 Text="{Binding CurrentUserId, Mode=OneWay}" Grid.ColumnSpan="3"/>
                        
                        <TabControl Grid.Row="6" Grid.ColumnSpan="4" Margin="0,10,0,0">
                            <TabItem Header="Attributes">
                                <local:AttributesView DataContext="{Binding AttributesVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="Children">
                                <local:ChildrenView DataContext="{Binding ChildrenVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="Type">
                                <local:TypeView DataContext="{Binding TypeVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="Creator">
                                <local:CreatorView DataContext="{Binding CreatorVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="State info">
                                <local:StateInfoView DataContext="{Binding StateInfoVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="Files">
                                <local:FilesView DataContext="{Binding FilesVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="Snapshots">
                                <local:SnapshotsView DataContext="{Binding SnapshotsVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="Access">
                                <local:AccessView DataContext="{Binding AccessVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="Relations">
                                <local:RelationsView DataContext="{Binding RelationsVm, Mode=OneWay}" />
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>
                
            </TabItem>
            <TabItem Header="Database Mode">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition Height="20*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="71*"/>
                            <ColumnDefinition Width="76*"/>
                        </Grid.ColumnDefinitions>
                        <TabControl Grid.ColumnSpan="2">
                            <TabItem Header="Types">
                                <local:TypesView DataContext="{Binding TypesVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="UserStates">
                                <local:UserStatesView DataContext="{Binding UserStatesVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="People">
                                <local:PeopleView DataContext="{Binding PeopleVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="OrgUnits">
                                <local:OrgUnitsView DataContext="{Binding OrgUnitsVm, Mode=OneWay}" />
                            </TabItem>
                            <TabItem Header="Exts analytics">
                                <local:AnalyticsView DataContext="{Binding AnalyticsVm, Mode=OneWay }"/>
                            </TabItem>
                            <TabItem Header="Code analytics">
                                <local:CodeStatesView DataContext="{Binding CodeSearchVM, Mode=OneWay }"/>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>